{
    "name": "urlund/wp-plugin-updater",
    "type": "library",
    "description": "WordPress plugin updater with GitHub integration and CLI tools",
    "version": "1.0.0",
    "license": "GPLv2",
    "autoload": {
        "psr-4": {
            "Urlund\\WordPress\\PluginUpdater\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Henrik Urlund"
        }
    ],
    "bin": [
        "bin/plugin-json",
        "bin/plugin-zip",
        "bin/plugin-publish"
    ],
    "scripts": {
        "plugin-json": "bin/plugin-json",
        "plugin-zip": "bin/plugin-zip",
        "plugin-publish": "bin/plugin-publish"
    },
    "scripts-descriptions": {
        "plugin-json": "Generate plugin.json from plugin headers",
        "plugin-zip": "Package plugin files into a ZIP archive",
        "plugin-publish": "Publish plugin to GitHub"
    },
    "require": {
        "php": ">=7.4"
    },
    "config": {
        "bin-dir": "bin"
    }
}
